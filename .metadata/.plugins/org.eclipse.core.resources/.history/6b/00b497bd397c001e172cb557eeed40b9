package logica;
import java.util.Scanner;

public class Test {
	public static void main(String[] args) {
		
		ObraTeatral obra1 = new ObraTeatral();
		Scanner sc = new Scanner(System.in);
		boolean bandera = true;
		int opcion, fila, columna;
		
		while(bandera) {
			System.out.println("--------- MENU ---------");
			System.out.println("[0] FINALIZAR PROGRAMA");
			System.out.println("[1] MOSTRAR ASIENTOS");
			System.out.println("[2] VERIFICAR DISPONIBILIDAD DE ASIENTO");
			System.out.println("[3] RESERVAR ASIENTO");
			
			System.out.println("Ingrese una opcion:");
			opcion = sc.nextInt();
			
			switch(opcion) {
			case 0: 
				System.out.println("\n ------------- PROGRAMA FINALIZADO -------------");
				
				case 1: 
					obra1.mostrarAsientos();
					break;
					
				case 2:
					System.out.println("Ingrese fila del asiento:");
					fila = sc.nextInt();
					System.out.println("Ingrese Numero del asiento:");
					columna = sc.nextInt();
					if(obra1.verificarAsiento(fila, columna)) {
						System.out.println("El asiento " + columna + "de la fila " + fila + " esta disponible");
					}
					else {
						System.out.println("El asiento " + columna + "de la fila " + fila + " NO esta disponible");
					}
					break;
				
				case 3:
					System.out.println("Ingrese fila del asiento:");
					fila = sc.nextInt();
					System.out.println("Ingrese Numero del asiento:");
					columna = sc.nextInt();
					if(obra1.verificarAsiento(fila, columna)) {
						obra1.reservarAsiento(fila, columna);
						System.out.println("El asiento " + columna + "de la fila " + fila + " FUE RESERVADO EXITOSAMENTE");
					}
					else {
						System.out.println("El asiento " + columna + "de la fila " + fila + " NO esta disponible");
					}
					break;
					

			}

		}
		
	}
}
