package interfazGrafica;
import javax.swing.*;
import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.Font;
import java.awt.GridLayout;
import java.awt.Insets;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.ArrayList;

public class MiFrame extends JFrame {

	//ATRIBUTOS
	private JLabel etiquetaDNI, etiquetaNombre, etiquetaApellido, 
				   etiquetaDireccion, etiquetaTel, etiquetaFNacimiento, etiquetaIndice;
	private JTextField txtDNI, txtNombre, txtApellido, 
					   txtDireccion, txtTel, txtFNacimiento, txtIndice;
	private JButton botonGuardar, botonNext, botonPrev;
	private JPanel panelSuperior, panelMedio, panelInferior;
	//private ArrayList<String> listaDNI, listaNombre, listaApellido, 
							  listaDireccion, listaTel, listaCorreo;
	private String[] listaDNI, listaNombre, listaApellido, 
	  listaDireccion, listaTel, listaCorreo;
	
	//CONSTRUCTOR
	public MiFrame() {
		//LISTAS
//		this.listaDNI = new ArrayList<String>();
//		this.listaNombre = new ArrayList<String>();
//		this.listaApellido = new ArrayList<String>();
//		this.listaDireccion = new ArrayList<String>();
//		this.listaTel = new ArrayList<String>();
//		this.listaCorreo = new ArrayList<String>();
		this.listaDNI = new String[10];
		this.listaNombre = new String[10];
		this.listaApellido = new String[10];
		this.listaDireccion = new String[10];
		this.listaTel = new String[10];
		this.listaCorreo = new String[10];
		
		//FRAME
		setTitle("Agenda Electronica");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setSize(550, 350);
		setLayout(new BorderLayout());
		setResizable(false);
		
		//PANELES
		armarPanelSuperior();
		armarPanelMedio();
		armarPanelInferior();
		
		getContentPane().add(panelSuperior, BorderLayout.NORTH);
		getContentPane().add(panelMedio,BorderLayout.CENTER);
		getContentPane().add(panelInferior, BorderLayout.SOUTH);	
	}
	
	//PANEL SUPERIOR (TITULO):
	private void armarPanelSuperior() {
		this.panelSuperior = new JPanel(new FlowLayout(FlowLayout.CENTER, 10, 10)); //FLOWLAYOUT POR DEFECTO
		
		JLabel tituloAPP = new JLabel("AGENDA ELECTRONICA");
		tituloAPP.setFont(new Font("Fira Code", Font.BOLD, 30));
		
		this.panelSuperior.add(tituloAPP);
	}
	
	//PANEL CENTRAL(DATOS):
	private void armarPanelMedio() {
		this.panelMedio = new JPanel(new FlowLayout(FlowLayout.CENTER));
		
		//ARMO PANEL IZQ. DEL CENTRO
		JPanel panelIzq = new JPanel(new GridLayout(3,2,5,5));
		this.etiquetaDNI = new JLabel("DNI:");
		this.etiquetaNombre = new JLabel("Nombre:");
		this.etiquetaApellido = new JLabel("Apellido:");
		this.etiquetaDNI.setHorizontalAlignment(SwingConstants.CENTER);
		this.etiquetaNombre.setHorizontalAlignment(SwingConstants.CENTER);
		this.etiquetaApellido.setHorizontalAlignment(SwingConstants.CENTER);
		
		this.txtDNI = new JTextField(20);
		this.txtNombre = new JTextField(20);
		this.txtApellido = new JTextField(20);
		
		panelIzq.add(this.etiquetaDNI);
		panelIzq.add(this.txtDNI);
		panelIzq.add(this.etiquetaNombre);
		panelIzq.add(this.txtNombre);
		panelIzq.add(this.etiquetaApellido);
		panelIzq.add(this.txtApellido);
		
		//ARMO PANEL DER. DEL CENTRO
		JPanel panelDer = new JPanel(new GridLayout(3,2,5,5));
		this.etiquetaDireccion = new JLabel("Direccion:");
		this.etiquetaTel = new JLabel("Telefono:");
		this.etiquetaFNacimiento = new JLabel("Fecha Nacimiento:");
		this.etiquetaDireccion.setHorizontalAlignment(SwingConstants.CENTER);
		this.etiquetaTel.setHorizontalAlignment(SwingConstants.CENTER);
		this.etiquetaFNacimiento.setHorizontalAlignment(SwingConstants.CENTER);
		
		this.txtDireccion = new JTextField(20);
		this.txtTel = new JTextField(20);
		this.txtFNacimiento = new JTextField(20);
		this.txtDireccion.setHorizontalAlignment(SwingConstants.LEFT);
		this.txtTel.setHorizontalAlignment(SwingConstants.CENTER);
		this.txtFNacimiento.setHorizontalAlignment(SwingConstants.CENTER);
		
		panelDer.add(this.etiquetaDireccion);
		panelDer.add(this.txtDireccion);
		panelDer.add(this.etiquetaTel);
		panelDer.add(this.txtTel);
		panelDer.add(this.etiquetaFNacimiento);
		panelDer.add(this.txtFNacimiento);
		
		//AÑADIMOS LOS PANELES IZQ Y DER AL PANEL CENTRAL
		this.panelMedio.add(panelIzq);
		this.panelMedio.add(panelDer);
	}

	//PANEL INFERIOR (BOTONES):
	private void armarPanelInferior() {
		this.panelInferior = new JPanel(new GridLayout(2,1));
		
		//PANEL SUPERIOR
		JPanel panelSupDelInf = new JPanel(new FlowLayout(FlowLayout.CENTER, 5, 10));
		
		this.botonGuardar = new JButton("Guardar");
		this.botonNext = new JButton(">>");
		this.botonPrev = new JButton("<<");
		
		/* AGREGO OYENTES A BOTONES */
		OyenteGuardar oyenteG = new OyenteGuardar();
		OyenteNext oyenteN = new OyenteNext();
		OyentePrev oyenteP = new OyentePrev();
		this.botonGuardar.addActionListener(oyenteG);
		this.botonNext.addActionListener(oyenteN);
		this.botonPrev.addActionListener(oyenteP);
		
		panelSupDelInf.add(this.botonPrev);
		panelSupDelInf.add(this.botonGuardar);
		panelSupDelInf.add(this.botonNext);
		
		//PANEL INFERIOR
		JPanel panelInfDelInf = new JPanel(new FlowLayout(FlowLayout.CENTER));
		
		this.etiquetaIndice = new JLabel("Indice");
		this.txtIndice = new JTextField(10);
		this.txtIndice.setText("0");
		this.txtIndice.setEditable(false);
		this.txtIndice.setHorizontalAlignment(SwingConstants.CENTER);
		
		panelInfDelInf.add(this.etiquetaIndice);
		panelInfDelInf.add(this.txtIndice);
		
		//AÑADIMOS LOS PANELES
		this.panelInferior.add(panelSupDelInf);
		this.panelInferior.add(panelInfDelInf);
	}
	
	
	//OYENTES
	private class OyenteGuardar implements ActionListener{
		@Override
		public void actionPerformed(ActionEvent e) {
			String indice = txtIndice.getText();
			int indiceNum = Integer.parseInt(indice);
			
			listaDNI.add(indiceNum, txtDNI.getText());
			listaNombre.add(indiceNum, txtNombre.getText());
			listaApellido.add(indiceNum, txtApellido.getText());
			listaDireccion.add(indiceNum, txtDireccion.getText());
			listaTel.add(indiceNum, txtTel.getText());
			listaCorreo.add(indiceNum, txtFNacimiento.getText());
		}
	}
	
	private class OyentePrev implements ActionListener{
		@Override
		public void actionPerformed(ActionEvent e) {
			String indice = txtIndice.getText();
			int indiceNum = Integer.parseInt(indice);
			if(indiceNum > 0) {
				indiceNum -= 1;
				indice = String.valueOf(indiceNum);
				txtIndice.setText(indice);
				
				txtDNI.setText(listaDNI.get(indiceNum));
				txtNombre.setText(listaNombre.get(indiceNum));
				txtApellido.setText(listaApellido.get(indiceNum));
				txtDireccion.setText(listaDireccion.get(indiceNum));
				txtTel.setText(listaTel.get(indiceNum));
				txtFNacimiento.setText(listaCorreo.get(indiceNum));
			}
		}
	}
	
	private class OyenteNext implements ActionListener{
		@Override
		public void actionPerformed(ActionEvent e) {
			String indice = txtIndice.getText();
			int indiceNum = Integer.parseInt(indice);
			
			if(indiceNum < 9) {
				indiceNum += 1;
				indice = String.valueOf(indiceNum);
				txtIndice.setText(indice);
				
				txtDNI.setText(listaDNI.get(indiceNum));
				txtNombre.setText(listaNombre.get(indiceNum));
				txtApellido.setText(listaApellido.get(indiceNum));
				txtDireccion.setText(listaDireccion.get(indiceNum));
				txtTel.setText(listaTel.get(indiceNum));
				txtFNacimiento.setText(listaCorreo.get(indiceNum));
			}
		}
	}

}
