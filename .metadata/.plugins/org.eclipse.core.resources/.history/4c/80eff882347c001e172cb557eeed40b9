package logica;
import java.util.Arrays;

public class obraTeatral {
	//ATRIBUTOS
	private char[][] asientos;

	//CONSTRUCTOR
	public obraTeatral() {
		this.asientos = new char[10][10];
		cargarAsientos();
	}

	//METODOS
	private void cargarAsientos() {
		for(int i = 0; i < this.asientos.length; i++) {
			Arrays.fill(this.asientos[i], 'L');
		}
	}
	
	public char verificarAsiento(int i, int j) {
		return asientos[i][j];
	}
	
	public void reservarAsiento(int i, int j) {
		this.asientos[i][j] = 'X';
	}
	
	public void mostrarAsientos() {
		System.out.println("ASIENTOS DE LA OBRA TEATRAL");
		for(int i = 0; i < this.asientos.length; i++) {
			System.out.print("FILA: " + i + " ");
			for(int j = 0; j < this.asientos.length[0]; j++) {
				System.out.println("");
				
			}
		}
	}

}
